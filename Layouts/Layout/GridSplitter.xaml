<Window x:Class="Layouts.Layout.GridSplitter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layouts.Layout"
        mc:Ignorable="d"
        Title="GridSplitter" MinHeight="400" MaxHeight="400" MinWidth="600" MaxWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Content="Button 1"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Button 2"/>

        <GridSplitter Grid.Column="0" Grid.RowSpan="2" Width="20"/>
    </Grid>
</Window>
